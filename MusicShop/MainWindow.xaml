<Window x:Class="Sramski.MusicShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sramski.MusicShop"
        mc:Ignorable="d"
        Title="Aplikacja sklepu muzycznego" Height="320" Width="240">
    <StackPanel>
        <Label FontWeight="Bold" FontSize="18" HorizontalAlignment="Center">Sklep muzyczny</Label>
        <Button Padding="10" Margin="20 10" Click="OnProducersButtonClick">Producenci</Button>
        <Button Padding="10" Margin="20 10" Click="OnProductsButtonClick">Produkty</Button>
        <Button Padding="10" Margin="20 10" Click="OnCloseButtonClick">Wyjście</Button>
        <Label HorizontalAlignment="Center" Margin="30">by Michał Śramski</Label>
    </StackPanel>
</Window>
